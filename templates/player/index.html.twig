{% extends 'base.html.twig' %}

{% block title %}Hello PlayerController!{% endblock %}

{% block body %}


    {% include "partials/_nav_bar.html.twig" %}


    <section class="background2 margins">
        <div class="d-flex justify-content-center">

            <div id="mobile-box">

                <div class="card1">
                    <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                        <img class="card-img-top img" src="{{ asset('assets/css/img/music3.jpg') }}" alt="Card image cap" height="450" width="390">
                    </div>

                    <div class="card-body text-center ">
                        <div>
                            <h4 class="font-weight-bold">{{ song.name }}</h4>
                            <p>{{ song.artist }}</p>
                        </div>


                        {% if prev %}
                            {%include "partials/_playerRedirection.html.twig" with { 'idSong':prev.id }  %}
                        {% endif %}


                        <button class="no_bg_border">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-double-left black t" viewBox="0 0 16 16">
                               <path fill-rule="evenodd" d="M8.354 1.646a.5.5 0 0 1 0 .708L2.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                               <path fill-rule="evenodd" d="M12.354 1.646a.5.5 0 0 1 0 .708L6.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
                            </svg>

                        </button>

                        {% if prev %}
                            </a>
                        {% endif %}

                        <audio controls class="audio" onclick="this.nextElementSibling.play()">
                           <source src="{{ asset('uploads/song/'~ song.audioFileName)}}" type="audio/mp3">
                        </audio>

                        {% if next %}
                            {%include "partials/_playerRedirection.html.twig" with { 'idSong':next.id }  %}
                        {% endif %}

                        <button class="no_bg_border">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-double-right black t" viewBox="0 0 16 16">
