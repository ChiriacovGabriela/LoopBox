{% extends 'base.html.twig' %}

{% block title %}Song index{% endblock %}

{% block body %}
    <h1>Song index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Artist</th>
                <th>Created_at</th>
                <th>Deleted_at</th>
                <th>Updated_at</th>
                <th>PicturePath</th>
                <th>AudioPath</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for song in songs %}
            <tr>
                <td>{{ song.id }}</td>
                <td>{{ song.name }}</td>
                <td>{{ song.type }}</td>
                <td>{{ song.artist }}</td>
                <td>{{ song.createdAt ? song.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ song.deletedAt ? song.deletedAt|date('Y-m-d') : '' }}</td>
                <td>{{ song.updatedAt ? song.updatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ song.picturePath }}</td>
                <td>{{ song.audioPath }}</td>
                <td>
                    <a href="{{ path('app_song_controlle_show', {'id': song.id}) }}">show</a>
                    <a href="{{ path('app_song_controlle_edit', {'id': song.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_song_controlle_new') }}">Create new</a>
{% endblock %}
