{% extends 'base.html.twig' %}

{% block title %}Song index{% endblock %}

{% block body %}
    <h1>Song index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Artist</th>
                <th>PictureFileName</th>
                <th>AudioFileName</th>
                <th>Player</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for song in songs %}
            <tr>
                <td>{{ song.id }}</td>
                <td>{{ song.name }}</td>
                <td>{{ song.type }}</td>
                <td>{{ song.artist }}</td>
                <td>{{ song.pictureFileName }}</td>
                <td>{{ song.audioFileName }}</td>
                <td>
                    <audio controls>
                           <source src="{{ asset('uploads/song/'~ song.audioFileName)}}" type="audio/mp3">
                    </audio>
                </td>
                <td>
                    <a href="{{ path('app_song_show', {'id': song.id}) }}">show</a>
                    <a href="{{ path('app_song_edit', {'id': song.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_song_new') }}">Create new</a>
{% endblock %}
