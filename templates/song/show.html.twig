{% extends 'base.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}

    {% include "partials/nav_bar.html.twig" %}

    <div class="background_song" >
        <h1 class="center neon red-color title">Song details</h1>

        <table class="table">
            <tbody>
                <tr class="white">
                    <th class="th1">Name</th>
                    <td class="td1">{{ song.name }}</td>
                </tr>
                <tr class="white">
                    <th class="th1">Type</th>
                    <td class="td1">{{ song.type }}</td>
                </tr>
                <tr class="white">
                    <th class="th1">Artist</th>
                    <td class="td1">{{ song.artist }}</td>
                </tr>
                <tr class="white">
                    <th class="th1">Audio</th>
                    <td class="td1">{{ song.audioFileName }}</td>
                </tr>
            </tbody>
        </table>


    {% include "song/_comment_form.html.twig" with {form: form} only %}

    {% for comment in comments %}
        {% if comment.song.id == song.id %}
            {{ comment.user.name }} a Ã©crit {{ comment.text }} <br>
        {% endif %}
    {% endfor %}


        <div class="buttons_block">

            <button class="btn1 btn btn-outline-light btn-lg px-5 red-color neon buttons_space">
                <a class="red-color neon" href="{{ path('app_song_edit', {'id': song.id}) }}">Edit Song</a>
            </button>
            <div class="position_right"> {{ include('song/_delete_form.html.twig') }}</div>

        </div>

        <div class="footer"><a class="orange_color" href="{{ path('app_song_index') }}">Back to Song list</a></div>

    </div>

{% endblock %}
