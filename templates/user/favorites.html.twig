{% extends 'base.html.twig' %}
{% block body %}
    {% include "partials/_nav_bar.html.twig" %}
    <div class="bg_fav_songs">
        <h1 class="red-color neon center title">{% trans %}All my favorites songs{% endtrans %}</h1>
        <table class="table noline white">
            <thead>
            <tr>
                <th class="th2"><font class="red-color neon">{% trans %}Title{% endtrans %}</font></th>
                <th class="th2"><font class="red-color neon">{% trans %}Artist{% endtrans %}</font></th>
                <th class="th2"><font class="red-color neon">{% trans %}Type{% endtrans %}</font></th>
                <th class="th2"></th>
            </tr>
            </thead>
            <tr>
                {% for song in app.user.favoris %}
                <td class="td2">{{ song.name }}</td>
                <td class="td2">{{ song.artist }}</td>
                <td class="td2">{{ song.type }}</td>
                <td class="td2">
                    <button class="btn btn-outline-light">
                        <a class="white_hover neon" href="{{ path('app_song_favoris_player',{'userId': app.user.id, 'songId': song.id}) }}">
                            {% trans %}play{% endtrans %}
                        </a>
                    </button>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}