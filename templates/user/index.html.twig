{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

    {% include "partials/nav_bar.html.twig" %}

    <section class="background_user">
        <h1 class="red-color neon center margin_top">Hello, {{ app.user.name }}</h1>

    <p class="lead white center">Welcome on your page! Here you can see all your playlists and create others if you want.
        <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="currentColor" class="bi bi-star star" viewBox="0 0 16 16">
            <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
        </svg>
    </p>
    <p class="center">
        <button class="btn btn-outline-light button_create_playlist"><a class="red-color neon" href="{{path('app_playlist_add')}}">Create Playlist</a></button>
    </p>
    <div class="container1 margin_top">
        <div class="row">
        {% for playlist in playlists %}
            <div class="card2">
                <div class="center">

                    {% if playlist.imageFileName == null %}
                        <img class="picture" src="https://cdn.dribbble.com/users/1752437/screenshots/14183305/ep_4x.png" alt="Card image cap" width="220" height="220">
                    {% else %}
                        <img class="picture" src="{{ asset('uploads/images/'~playlist.imageFileName) }}" alt="Card image cap" width="220" height="220">
                    {% endif %}
                </div>

                <p><h4 class="center"><a class="red-color neon" href="{{path('app_playlist', {id: playlist.id})}}">{{ playlist.name }}</a></h4></p>
            </div>

        {% endfor %}
        </div>
    </div>

    {% include "user/_footer.html.twig" %}

    </section>



{% endblock %}