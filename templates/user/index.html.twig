{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}

    {% include "partials/nav_bar.html.twig" %}

    <section class="background_user">
    <h1 class="red-color neon center margin_top">Hello, {{ app.user.name }}</h1>
    <p class="lead white center">Welcome on your page! Here you can see all your playlists and add others if you want.</p>
    <p class="center">
        <button class="btn btn-outline-light"><a class="red-color neon" href="{{path('app_playlist_add')}}">Create Playlist</a></button>
    </p>

    <div class="container transparent">

        <div class="row">
            {% for playlist in playlists %}
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        {% if playlist.imageFileName == null %}
                            <img class="card-img-top" src="https://cdn.dribbble.com/users/1752437/screenshots/14183305/ep_4x.png" alt="Card image cap" width="100" height="250">
                        {% else %}
                            <img class="card-img-top" src="{{ asset('uploads/images/'~playlist.imageFileName) }}" alt="Card image cap" width="100" height="250">
                        {% endif %}

                        <div class="card-body">
                            <p class="card-text neon red-color">{{ playlist.name }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button class=""><a class="red-color neon" href="{{path('app_playlist', {id: playlist.id})}}">View</a></button>
                                    <button class=""><a class="neon red-color" href="{{path('app_playlist_edit', {id: playlist.id})}}">Edit</a> </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    </section>

{% endblock %}
