<form method="post" action="{{ path('app_playlist_delete', {'id': playlist.id}) }}" onsubmit="return confirm({% trans %}'Are you sure you want to delete this item?'{% endtrans %});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ playlist.id) }}">
    <button class="btn btn-outline-light">{% trans %}Delete{% endtrans%} Playlist</button>
</form>