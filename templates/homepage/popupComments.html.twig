<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Comments
</button>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Comments for this song</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {% if app.user is not null %}
                    {% include "song/_comment_form.html.twig" with {form: form} only %}
                {% else %}
                    <a href="{{ path('app_login') }}">Please login to leave a comment !</a> <br>
                {% endif %}
                {% for comment in comments %}
                    {% if comment.song.id == song.id %}
                        {{ comment.user.name }} a Ã©crit {{ comment.text }}
                        {% if app.user is not null %}
                            {% if app.user.id == comment.user.id %}
                                <a class=""
                                   href="{{ path('app_comment_delete', {'commentId': comment.id, 'songId': song.id}) }}">Delete</a>
                            {% endif %}
                        {% endif %}
                        <br>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>