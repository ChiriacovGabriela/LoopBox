{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}

    {% include "partials/nav_bar.html.twig" %}

    <div class="bg_homepage">

    <h1 class="center red-color neon title">Welcome to Loopbox!</h1>

    {%include "partials/_search_data.html.twig" with {
        form: form ?? null
    } only %}

    <table class="table noline">
        <thead>
        <tr class="white">
            <th class="th2">Name</th>
            <th class="th2">Type</th>
            <th class="th2">Artist</th>
            <th class="th2"></th>
            <th class="th2"></th>
        </tr>
        </thead>
        <tbody>
        {% for song in songs %}
            <tr class="white">
                <td class="td2">{{ song.name }}</td>
                <td class="td2">{{ song.type }}</td>
                <td class="td2">{{ song.artist }}</td>
                <td class="td2">
                    <button class="btn_space btn btn-outline-light">
                        <a class="white_hover neon" href="{{ path('app_homepage_player', {'id': song.id}) }}">Play</a>
                    </button>
                </td>
                <td class="td2">
                    <button  class="btn_space btn btn-outline-light white_hover neon" data-toggle="modal"
                            data-target="#exampleModalLong{{ song.id }}">Add
                    </button>
                </td>
            </tr>
            {% include "partials/_popupPlaylists.html.twig"%}
        {% endfor %}
        </tbody>
    </table>
        <div class="container1 margin_top">
            <div class="row">
                {% for album in albums %}
                    <div class="card2">
                        <div class="center">
                            <img class="picture" src="{{ asset('uploads/images/'~album.pictureFileName) }}" alt="Card image cap" width="220" height="220">
                        </div>
                        <p><h4 class="center"><a class="red-color neon" href="{{path('app_album_show', {id: album.id})}}">{{ album.name }}</a></h4></p>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>


{% endblock %}