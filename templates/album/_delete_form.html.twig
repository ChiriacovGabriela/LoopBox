<form method="post" action="{{ path('app_album_delete', {'id': album.id}) }}" onsubmit="return confirm({% trans %}'Are you sure you want to delete this item?'{% endtrans %});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ album.id) }}">
    <button class="btn1 btn btn-outline-light btn-lg px-5 white_hover neon">{% trans %}Delete{% endtrans %}</button>
</form>
