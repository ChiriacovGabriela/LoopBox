{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ album.type }}</td>
            </tr>
            <tr>
                <th>Artist</th>
                <td>{{ album.artist }}</td>
            </tr>

            <tr>
                <th>Created_at</th>
                <td>{{ album.createdAt ? album.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ album.updatedAt ? album.updatedAt|date('Y-m-d') : '' }}</td>
            </tr>
            {% for song in album.songs %}
            <tr>
                <th>Song in Album</th>
                <td>{{ song.Name }}</td>
                <td>
                    <audio controls>
                        <source src="{{ asset('uploads/song/'~ song.audioFileName)}}" type="audio/mp3">
                    </audio>
                </td>
                <td><br></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_album_index') }}">back to list</a>

    <a href="{{ path('app_album_edit', {'id': album.id}) }}">edit</a>

    {{ include('album/_delete_form.html.twig') }}
{% endblock %}
