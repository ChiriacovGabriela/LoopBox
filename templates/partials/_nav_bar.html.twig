{% if app.user %}

    <nav>
        <a class="nav_link neon" href="{{ path('app_homepage')}}">LoopBox </a>

        <div class="header_nav">
            <div class="nav_link">
                <svg class="bi bi-person-circle" data-toggle="dropdown" aria-haspopup="true"
                     xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="rgba(211, 25, 47, 1)" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                </svg>

                <div class="dropdown-menu dropdown-menu-right neon dropdown">
                    <a class="dropdown-item white" href="{{ path('app_user', {userId: app.user.id})}}">{% trans %}My account{% endtrans %}</a>
                    <a class="dropdown-item white" href="{{ path('app_user_edit', {id: app.user.id}) }}">{% trans %}Edit my account{% endtrans %}</a>
                    <a class="dropdown-item white" href="{{ path('app_album_index') }}">{% trans %}My albums{% endtrans %}</a>
                    <a class="dropdown-item white" href="{{ path('app_song_index') }}">{% trans %}My songs{% endtrans %}</a>
                    <a class="dropdown-item white" href="{{ path('app_logout')}}">{% trans %}Logout{% endtrans %}</a>
                    <a class="dropdown-item white">
                    {% for locale in locales %}
                        {% if locale!=app.request.locale %}
                            <a class="nav_link neon" href="{{ path('app_change_locale', {'locale': locale}) }}"><img src="{{ asset('assets/css/img/'~locale~'.png') }}" alt="{{ locale }}" width="23" height="18"></a>
                        {% endif %}
                    {% endfor %}
                    </a>

                </div>
            </div>

        </div>

    </nav>


{% else %}

    <nav>
        <a class="nav_link neon" href="{{ path('app_homepage')}}">LoopBox</a>

        <div class="header_nav">

            <a class="nav_link neon " href="{{ path('app_register')}}">{% trans %}Sign up{% endtrans %}</a>

            <a class="nav_link neon " href="{{ path('app_login')}}">{% trans %}Login{% endtrans %}</a>

            {% for locale in locales %}
                {% if locale!=app.request.locale %}
                    <a class="nav_link neon" href="{{ path('app_change_locale', {'locale': locale}) }}"><img src="{{ asset('assets/css/img/'~locale~'.png') }}" alt="{{ locale }}" width="23" height="18"></a>
                {% endif %}
            {% endfor %}

        </div>

    </nav>


{% endif %}