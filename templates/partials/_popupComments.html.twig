<button type="button" class=" btn btn-outline-light" data-toggle="modal" data-target="#exampleModalCenter">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-text" viewBox="0 0 16 16">
        <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
        <path d="M4 5.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zM4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8zm0 2.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5z"/>
    </svg>
</button>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content ">
            <div class="modal-header comment_color_top">
                <h5 class="modal-title red-color" id="exampleModalLongTitle">{% trans %}Comments for this song{% endtrans %}</h5>
                <button type="button" class="no_bg_border" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true ">&times;</span>
                </button>
            </div>
            <div class="modal-body comment_color_bottom">
                {% if app.user is not null %}
                    {% include "/song/_comment_form.html.twig" with {form: form} only %}
                {% else %}
                    <div>{% trans %}Please login to leave a comment ...{% endtrans %}
                    <a class="red-color emphasized" href="{{ path('app_login') }}">{% trans %}login here{% endtrans %}</a> <br></div>
                {% endif %}
                {% for comment in comments %}

                    {% if comment.song.id == song.id %}
                        {{ comment.user.name}}  {% trans %}commented{% endtrans %}: {{ comment.text }}
                        {% if app.user is not null %}
                            {% if app.user.id == comment.user.id %}
                                <a class="red-color emphasized position_right"
                                   href="{{ path('app_comment_delete', {'commentId': comment.id, 'songId': song.id}) }}">{% trans %}Delete{% endtrans %}</a>
                            {% endif %}
                        {% endif %}
                        <br>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>