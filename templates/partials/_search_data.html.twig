{% if form %}
    {{ form_start(form) }}
    <div id='searchBar' class="input-group center">
        <div class="search_zone">{{ form_widget(form.q, {'attr':{'class':'transparent'}}) }}</div>
        <button type="submit" class="btn btn-outline-light white_hover neon search_btn">{% trans %}search{% endtrans %}</button>
    </div>
    {{ form_end(form) }}
{% endif %}

